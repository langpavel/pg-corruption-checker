{
  "name": "@langpavel/pg-corruption-checker",
  "version": "0.0.1",
  "description": "PostgreSQL/TimescaleDB Corruption Checker",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read mod.ts",
    "run": "deno run --allow-net --allow-env --allow-read mod.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "imports": {
    "postgresjs": "https://deno.land/x/postgresjs@v3.4.5/mod.js",
    "@std/assert": "jsr:@std/assert",
    "@std/fmt": "jsr:@std/fmt",
    "@std/cli": "jsr:@std/cli",
    "@std/fs": "jsr:@std/fs",
    "@std/path": "jsr:@std/path",
    "@std/toml": "jsr:@std/toml"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "**/*.md"
    ],
    "exclude": ["node_modules", ".git"]
  }
}
